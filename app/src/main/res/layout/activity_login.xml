<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LoginActivity" android:background="#F54A6A" android:id="@+id/linearLayout"
>

    <TextView
            android:text="Find Your Food"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            android:textColor="@color/LogoText"
            android:textSize="40sp" android:textStyle="bold" android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="50dp" android:layout_marginBottom="248dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>

    <TextView
            android:text="SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CallSignUp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.796" app:layout_constraintVertical_bias="0.283"
            android:textSize="30sp" android:textColor="@color/LogoText" android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_line" android:id="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/CallSignUp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/CallSignUp" app:layout_constraintHorizontal_bias="0.821"
            app:layout_constraintTop_toTopOf="@+id/CallSignUp" android:backgroundTint="@color/white"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CallLogin"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.549"
            app:layout_constraintVertical_bias="1.0" android:textSize="30sp" android:textColor="@color/white"
            android:textStyle="bold" android:fontFamily="@font/roboto_medium"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:background="@drawable/layout"
            android:id="@+id/linearLayout2" app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/LoginLayout" android:visibility="visible">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"

                        android:ems="10"
                        android:background="@drawable/search_background"
                        android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                        android:layout_marginTop="25dp"
                        android:padding="20dp" android:hint="Email" android:fontFamily="@font/roboto_medium"
                        android:drawableStart="@drawable/ic_envelope" android:drawablePadding="10dp"
                        android:id="@+id/loginMail"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:background="@drawable/search_background"
                        android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                        android:layout_marginTop="25dp"
                        android:padding="20dp" android:hint="Password" android:fontFamily="@font/roboto_medium"
                        android:drawableStart="@drawable/ic_lock" android:drawablePadding="10dp"
                        android:id="@+id/loginPassword"/>
                <TextView
                        android:text="@string/Forgot"
                        android:layout_width="200dp"
                        android:layout_height="50dp" android:id="@+id/ForgotPasword"
                        android:layout_gravity="end"
                        android:paddingTop="5dp" android:textAlignment="textEnd" android:layout_marginEnd="40dp"
                        android:layout_marginTop="15dp" android:textSize="18sp" android:textStyle="bold"
                        android:textColor="@color/black" android:fontFamily="@font/roboto_medium"/>
                <TextView
                        android:text="Login"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/loginButton"
                        android:fontFamily="@font/roboto_medium" android:layout_marginTop="35dp"
                        android:layout_marginEnd="40dp" android:padding="10dp"
                        android:textSize="27sp" android:textColor="@color/white" android:textAlignment="center"
                        android:textStyle="bold" android:background="@drawable/loginbutton"
                        android:layout_gravity="center" android:layout_marginStart="35dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="25dp">
                    <Button
                            android:text="Google"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/signUpGoogle"
                            android:drawableLeft="@drawable/ic_google"
                            app:cornerRadius="20dp"
                            android:padding="20dp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginEnd="40dp"
                            android:backgroundTint="#CF4332"
                            android:layout_marginStart="40dp"/>
                    <Button
                            android:text="Facbook"
                            android:layout_width="match_parent"
                            android:textAllCaps="false"
                            android:layout_height="wrap_content"
                            android:id="@+id/signUpFB"
                            android:drawableLeft="@drawable/ic_facebook"
                            app:cornerRadius="20dp"
                            android:padding="20dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginStart="40dp"
                            android:backgroundTint="#3c5793"
                            android:layout_marginEnd="40dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/SignUpLayout"
                    android:visibility="gone">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="@drawable/search_background"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="25dp"
                        android:padding="20dp"
                        android:hint="Name"
                        android:fontFamily="@font/roboto_medium"
                        android:drawableStart="@drawable/ic_user__5_"
                        android:drawablePadding="10dp"
                        android:id="@+id/userName"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:background="@drawable/search_background"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="25dp"
                        android:padding="20dp" android:hint="Phone"
                        android:fontFamily="@font/roboto_medium"
                        android:drawableStart="@drawable/ic_telephone"
                        android:drawablePadding="10dp"
                        android:id="@+id/userPhoneNumber"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:background="@drawable/search_background"
                        android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                        android:layout_marginTop="25dp"
                        android:padding="20dp" android:hint="Email" android:fontFamily="@font/roboto_medium"
                        android:drawableStart="@drawable/ic_envelope" android:drawablePadding="10dp"
                        android:id="@+id/userEmail"/>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:maxLength="25"
                            android:background="@drawable/search_background"
                            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                            android:layout_marginTop="25dp"
                            android:padding="20dp" android:hint="Password" android:fontFamily="@font/roboto_medium"
                            android:drawableStart="@drawable/ic_lock" android:drawablePadding="10dp"
                            android:id="@+id/userPassword"
                    />

                    <ImageView
                            android:id="@+id/image_id"
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:alpha=".5"
                            android:padding="5dp"
                            android:src="@drawable/ic_pass_show"
                            android:layout_marginTop="44dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="80dp"/>

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:maxLength="25"
                            android:layout_below="@+id/userPassword"
                            android:background="@drawable/search_background"
                            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                            android:layout_marginTop="25dp"
                            android:padding="20dp" android:hint="Confrom Password"
                            android:fontFamily="@font/roboto_medium"
                            android:drawableStart="@drawable/ic_lock" android:drawablePadding="10dp"
                            android:id="@+id/userPasswordConfram"
                    />
                    <ImageView
                            android:id="@+id/image_id2"
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:alpha=".5"
                            android:padding="5dp"
                            android:src="@drawable/ic_pass_show"
                            android:layout_marginTop="129dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="80dp"/>
                </RelativeLayout>
                <TextView
                        android:text="SignUp"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/signUpButton"
                        android:fontFamily="@font/roboto_medium" android:layout_marginTop="40dp"
                        android:layout_marginEnd="40dp" android:padding="10dp"
                        android:textSize="27sp" android:textColor="@color/white" android:textAlignment="center"
                        android:textStyle="bold" android:background="@drawable/loginbutton"
                        android:layout_gravity="center" android:layout_marginStart="35dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>