<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Fragments.BottomSheetFragment"
                                                   android:background="@drawable/layout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showUserPassword"
            android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_medium" android:text="Password"
            app:layout_constraintStart_toEndOf="@+id/textView22" app:layout_constraintTop_toTopOf="@+id/textView22"
            app:layout_constraintHorizontal_bias="0.314" app:layout_constraintBottom_toTopOf="@+id/food_image"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Password :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22"
            android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/roboto" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="@+id/textView21"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showUserEmail"
            android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_medium" android:text="Email"
            app:layout_constraintStart_toEndOf="@+id/textView21" app:layout_constraintTop_toTopOf="@+id/textView21"
            app:layout_constraintHorizontal_bias="0.2"/>
    <TextView
            android:text="Email :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView21"
            android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/roboto" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/textView20" android:layout_marginTop="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showuserPhone"
            android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_medium" android:text="Phone"
            app:layout_constraintStart_toEndOf="@+id/textView20" app:layout_constraintTop_toTopOf="@+id/textView20"
            app:layout_constraintHorizontal_bias="0.121"/>
    <TextView
            android:text="Phone :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView20"
            android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/roboto" android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView14" android:layout_marginTop="32dp"/>
    <TextView
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/roboto" android:textColor="@color/black"
            android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/showUserName"
            android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/black" app:layout_constraintTop_toTopOf="@+id/textView14"
            app:layout_constraintStart_toEndOf="@+id/textView14" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.182"
            android:fontFamily="@font/roboto_medium" android:text="User Name"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_image"
            android:layout_width="123dp"
            android:layout_height="107dp"
            android:src="@drawable/ic_user"
            app:civ_border_width="2dp"
            app:civ_border_color="#ff0000"
            android:padding="5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView22" app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintTop_toBottomOf="@+id/textView22" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>