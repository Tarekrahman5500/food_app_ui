<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_admin_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:padding="5dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/foodName"
            android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/black" android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toEndOf="@+id/food_admin_image"
            app:layout_constraintTop_toTopOf="@+id/food_admin_image" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/food_admin_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>