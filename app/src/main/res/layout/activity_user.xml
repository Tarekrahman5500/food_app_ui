<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F54A6A"
        tools:context=".Activity.UserActivity">

    <TextView
            android:text="Weclome Back User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:textSize="30sp"
            android:textColor="@color/white" android:textStyle="bold" android:fontFamily="@font/roboto_medium"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView23" android:layout_marginTop="24dp"
            android:background="@drawable/layout" android:id="@+id/linearLayout4">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="Update Deatils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/updatedeatilsText" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/LogoText"
                        android:background="@drawable/loginbutton" android:layout_marginTop="35dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="30dp" android:textAlignment="center"
                        android:layout_marginStart="35dp" android:padding="30dp" android:layout_gravity="center"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:id="@+id/updateLayout">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:background="@drawable/search_background"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginTop="25dp"
                            android:padding="20dp"
                            android:hint="Name"
                            android:fontFamily="@font/roboto_medium"
                            android:drawableStart="@drawable/ic_user__5_"
                            android:drawablePadding="10dp"
                            android:id="@+id/updateUserName"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:background="@drawable/search_background"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginTop="25dp"
                            android:padding="20dp" android:hint="Phone"
                            android:fontFamily="@font/roboto_medium"
                            android:drawableStart="@drawable/ic_telephone"
                            android:drawablePadding="10dp"
                            android:id="@+id/updatePhoneNumber"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:background="@drawable/search_background"
                            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                            android:layout_marginTop="25dp"
                            android:padding="20dp" android:hint="Email" android:fontFamily="@font/roboto_medium"
                            android:drawableStart="@drawable/ic_envelope" android:drawablePadding="10dp"
                            android:id="@+id/updateEmail"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:background="@drawable/search_background"
                                android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
                                android:layout_marginTop="25dp"
                                android:padding="20dp" android:hint="Password" android:fontFamily="@font/roboto_medium"
                                android:drawableStart="@drawable/ic_lock" android:drawablePadding="10dp"
                                android:id="@+id/updatePassword"
                        />

                        <ImageView
                                android:id="@+id/image_id"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:alpha=".5"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pass_show"
                                android:layout_marginTop="90dp"
                                android:layout_alignParentEnd="true" android:layout_marginEnd="80dp"/>
                    </RelativeLayout>
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_user"
                            android:id="@+id/ProfileImage"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#F54A6A"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp" android:layout_gravity="center"/>
                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp" app:srcCompat="@drawable/ic_plus" android:id="@+id/AddPic"
                            android:layout_marginStart="30dp" android:layout_marginTop="-30dp"
                            android:contentDescription="@string/todo" android:layout_gravity="center"/>
                    <TextView
                            android:text="Update"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content" android:id="@+id/loginButton"
                            android:fontFamily="@font/roboto_medium" android:layout_marginTop="35dp"
                            android:layout_marginEnd="40dp" android:padding="10dp"
                            android:textSize="27sp" android:textColor="@color/white" android:textAlignment="center"
                            android:textStyle="bold" android:background="@drawable/loginbutton"
                            android:layout_gravity="center" android:layout_marginStart="35dp"/>

                </LinearLayout>
                <TextView
                        android:text="My Orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView25" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/LogoText"
                        android:background="@drawable/loginbutton" android:layout_marginTop="35dp"
                        android:layout_marginEnd="30dp" android:textAlignment="center"
                        android:layout_marginStart="35dp" android:padding="30dp" android:layout_gravity="center"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/ordersLayout" android:visibility="gone">
                    <TextView
                            android:text="Your Orders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView28" android:textSize="24sp"
                            android:textColor="@color/black" android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" android:layout_margin="30dp"
                            android:textAlignment="center" android:gravity="center"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                        android:text="Payment Method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView29" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/LogoText"
                        android:background="@drawable/loginbutton" android:layout_marginTop="35dp"
                        android:layout_marginEnd="30dp" android:textAlignment="center"
                        android:layout_marginStart="35dp" android:padding="30dp" android:layout_gravity="center"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/paymentLayout" android:visibility="gone">
                </LinearLayout>
                <TextView
                        android:text="My Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView30" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/LogoText"
                        android:background="@drawable/loginbutton" android:layout_marginTop="35dp"
                        android:layout_marginEnd="30dp" android:textAlignment="center"
                        android:layout_marginStart="35dp" android:padding="30dp" android:layout_gravity="center"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/locationLayout" android:visibility="gone">
                </LinearLayout>
                <TextView
                        android:text="LogOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView31" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/white"
                        android:background="@drawable/loginbutton" android:layout_marginTop="35dp"
                        android:layout_marginEnd="30dp" android:textAlignment="center"
                        android:layout_marginStart="35dp" android:padding="30dp" android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView23"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
        <include
                android:id="@+id/bootom_card"
                layout="@layout/bottom_card" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>